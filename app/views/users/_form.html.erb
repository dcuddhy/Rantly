<div class="col-md-8">
  <%= render "layouts/errors", object: @user %>

  <%= form_for @user do |f| %>

    <div class="form-group">
      <%= f.label :first_name, class: "col-md-2" %>
      <%= f.text_field :first_name, class: "col-md-10" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-md-2" %>
      <%= f.text_field :last_name, class: "col-md-10" %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-md-2" %>
      <%= f.email_field :email, class: "col-md-10" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-md-2" %>
      <%= f.password_field :password_digest, class: "col-md-10" %>
    </div>

    <div class="form-group">
      <%= f.submit class:"btn btn-primary col-md-offset-2" %>
    </div>

  <% end %>
</div>
