  <div class="row">
    <% @users.reverse_each do |user| %>
      <div class="user-tile">
        <div class="avatar">
        </div>
        <div>
          <%= link_to user.full_name, user_path(user) %><br>
          <span><%= user.email %></span>
        </div>
      </div>
    <% end %>
  </div>

