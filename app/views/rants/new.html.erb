  <%= render "layouts/errors", object: @rant %>

  <div class="rant-box">
    <%= form_for [@user, @rant] do |f| %>
      <div class="rant-head">

        <div class="cancel-button">
        <i class="fa fa-sign-in"></i> Cancel
        </div>

          <div class="form-group">
            <%= f.submit "FOO", class:"fa fa-upload body-button" %>
          </div>

        <div class="body-button">
          <i class="fa fa-upload"></i> Save
        </div>


        <div class="form-group">
          <%= f.text_field :title, class: "wide", :placeholder => "Rant Title" %>
        </div>
    </div>

    <div class="avatar">
    </div>
    <div class="rant-post">

          <div class="form-group">
            <%= f.text_area :body, class: "col-md-offset-4 col-md-8", :placeholder => "Start your rant." %>
          </div>




        <% end %>
    </div>
  </div>

  </div>

</div>
