<div class="scroll">

  <% if @rants.count > 0 %>
    <% @rants.reverse_each do |rant| %>
      <div class="rant-box">
        <div class="rant-head">

          <% if rant.user == current_user %>
            <%= link_to "Edit", edit_rant_path(rant), class: "body-button fa fa-edit" %>
          <% end %>

          <h2><%= link_to rant.title, rant_path(rant) %></h2><br>
        </div>

        <div class="avatar" style="background-image: url('<%= rant.user.gravatar_url %>')">
        </div>

        <div class="rant-post">
          <%= rant.body %>
        </div>

      </div>
    <% end %>

  <% else %>
    <div class="empty-result">
      <h2>These are not the droids you're looking for</h2>
    </div>
  <% end %>

</div>
