<div class="page-header">
  <h2><%= title %> Rant</h2>
</div>


<div class="col-md-8">

  <%= form_for [@user, @rant] do |f| %>

    <div class="form-group">
      <%= f.label :title, class: "col-md-2" %>
      <%= f.text_field :title, class: "col-md-10" %>
    </div>

    <div class="form-group">
      <%= f.label :body, class: "col-md-2" %>
      <%= f.text_area :body, class: "col-md-10" %>
    </div>


    <div class="form-group">
      <%= f.submit class:"btn btn-primary col-md-offset-2" %>
    </div>

  <% end %>
</div>
